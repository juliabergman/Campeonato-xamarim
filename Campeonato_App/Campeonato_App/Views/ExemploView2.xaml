            <!-- Exemplo de uma tela de Login com outros componentes-->
           
            <Entry Placeholder="Email" BackgroundColor="#00BFFF" TextColor="Black" />
            <Entry Placeholder="Password" IsPassword="True" BackgroundColor="#00BFFF" TextColor="Black"/>
            <!--Lados Esquerdo / Superior / Direito / Inferior-->
            <Grid HorizontalOptions="Center" Padding="0, 10, 0, 10">
                <Label Text="Remember Me" TextColor="Black" Grid.Row="0" Grid.Column="0" />
                <Switch IsToggled="True" Grid.Row="0" Grid.Column="1"  />
            </Grid>

            <Label Text="Botões"
               FontSize="Large"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" />
            
            <Button Text="Click me" />

            <Button Text="Login" BackgroundColor="#0072bc" TextColor="White" />

            <Button Text="BOTÃO CENTRO" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />

            <Button Text="Click me 2"
            TextColor="Blue"
            BackgroundColor="#38DA4B"
            BorderColor="Red"
            BorderWidth="5"
            CornerRadius="5"
            WidthRequest="75"
            HeightRequest="75" 
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center"/>        


        </StackLayout>
    </ContentPage.Content>
</ContentPage>